<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BeeMock"
            
             x:Class="BeeMock.MainPage">


    <Grid RowDefinitions="*,100">
        <ScrollView x:Name="view">
            <VerticalStackLayout>
                 <Label  Text="{Binding Buttons[0].Text}" IsVisible="{Binding Buttons[0].Selected}"/>
                 <Label  Text="{Binding Buttons[1].Text}" IsVisible="{Binding Buttons[1].Selected}"/>
                 <Label  Text="Bee" IsVisible="{Binding Buttons[2].Selected}"/>
                 <ContentView Content="{Binding CurrentView}" />
            </VerticalStackLayout>

        </ScrollView>

        <local:IconButton Grid.Row="1" x:Name="tabs" ></local:IconButton>

    </Grid>
</ContentPage>
