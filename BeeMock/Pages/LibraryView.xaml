<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BeeMock"
    x:Class="BeeMock.LibraryView">
    <VerticalStackLayout>
        <Grid
            x:Name="MenuRow" >
            <Button
                HorizontalOptions="Start"
                Text="Premium"
                FontSize="10"
                VerticalOptions="Center"
                Clicked="Button_Clicked"
                Padding="10,0,10,0"
                Margin="0" />
            <HorizontalStackLayout
                HorizontalOptions="End">
                <Border
                    Stroke="black"
                    StrokeShape="RoundRectangle 25 25 25 25"
                    WidthRequest="45"
                    Margin="0,0,5,0"
                    StrokeThickness=".8">

                    <Label
                        Text="{Static local:Icons.Search}"
                        FontSize="25"
                        Margin="5"
                        FontFamily="icons"
                        TextColor="{StaticResource Primary}"
                        VerticalTextAlignment="Center"
                        HorizontalOptions="Center" />
                </Border>

                <Border
                    Stroke="black"
                    StrokeShape="RoundRectangle 25 25 25 25"
                    Padding="10,0,10,0"
                    Margin="0,0,5,0"
                    StrokeThickness=".8">

                    <HorizontalStackLayout>
                        <Label
                            Text="{Static local:Icons.Menu}"
                            FontSize="30"
                            FontFamily="icons"
                            Margin="0,0,5,0"
                            TextColor="{StaticResource Primary}"
                            VerticalTextAlignment="Center" />


                        <Label
                            Text="Filters"
                            FontSize="15"
                            VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>
                </Border>
            </HorizontalStackLayout>
        </Grid>


        <local:ArticleSlideControl Articles="{Binding Articles}" />
        


        <Grid
            x:Name="weeklyGoal">
            <Label
                Text="Your Weekly Goal"
                FontFamily="OpenSansSemibold"
                FontSize="25"
                HorizontalOptions="Start" />
            <Label
                HorizontalOptions="End"
                VerticalOptions="Center"
                Text="Change goal -->"
                FontSize="12"
                TextColor="{StaticResource Primary}" />
        </Grid>

        <Border
            Margin="10"
            StrokeShape="RoundRectangle 10 10 10 10">
            <VerticalStackLayout
                Padding="8">
                <Label
                    Text="7-10 stories/week"
                    FontFamily="OpenSansSemibold"
                    Margin="0,0,0,10" />
                <local:ProgressDash
                    Value="{Binding Value2}" />
            </VerticalStackLayout>


        </Border>



        <Grid
            x:Name="readingChallenges">
            <Label
                Text="Reading challenges"
                FontFamily="OpenSansSemibold"
                FontSize="25"
                HorizontalOptions="Start" />
            <Label
                HorizontalOptions="End"
                VerticalOptions="Center"
                Text="4 challengesl -->"
                FontSize="12"
                TextColor="{StaticResource Primary}" />
        </Grid>



        <local:ArticleSlideControl Articles="{Binding Articles2}" />



    </VerticalStackLayout>
</ContentView>

